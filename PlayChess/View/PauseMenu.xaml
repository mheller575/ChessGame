<Window x:Class="PlayChess.PauseMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlayChess"
        mc:Ignorable="d"
        Title="PauseMenu" Height="450" Width="800" Background="Black">
    <Menu x:Name="StartMenu" VerticalAlignment="Center" HorizontalAlignment="Center" Background="Black" Foreground="#FFEE1414">
        <Menu.ItemsPanel>
            <ItemsPanelTemplate>
                <VirtualizingStackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </ItemsPanelTemplate>
        </Menu.ItemsPanel>
        <MenuItem Name="ResumeGameMenuItem" Header="_Resume" Click="ResumeGameMenuItem_Click" IsEnabled="True" Visibility="Visible" HorizontalAlignment="Center"/>
        <MenuItem Name="NewGameMenuItem" Header="_New Game" Click="NewGameMenuItem_Click" IsEnabled="True" Visibility="Visible" HorizontalAlignment="Center"/>
        <MenuItem Name="SaveGameMenuItem" Header="S_ave Game" Click="SaveGameMenuItem_Click" IsEnabled="True" Visibility="Visible" HorizontalAlignment="Center"/>
        <MenuItem Name="SettingsMenuItem" Header="_Settings" Click="SettingsMenuItem_Click" IsEnabled="True" Visibility="Visible" HorizontalAlignment="Center"/>
        <MenuItem Name="ExitMenuItem" Header="_Exit" Click="ExitMenuItem_Click" IsEnabled="True" Visibility="Visible" HorizontalAlignment="Center"/>
    </Menu>
</Window>
